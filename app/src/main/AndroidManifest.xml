<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.adnia.jetpack_movie">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/movieshow"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Jetpackmovie">
        <activity android:name=".ui.activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.DetailsActivity" />
        <activity android:name=".ui.activity.MainActivity"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>